<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.bean">
	<class name="Book" table="book">
		<id name="code" column="code">
			<generator class="native"></generator>
		</id>
		<property name="bookname" column="bookname" type="java.lang.String"
			not-null="true" length="20"></property>
		<property name="author" column="author" type="java.lang.String"
			not-null="true" length="16" />
		<property name="price" column="price" type="java.lang.String"
			not-null="true" length="10" />
		<property name="booktype" column="booktype" type="java.lang.String"
			not-null="true" length="16" />
		<property name="publishing" column="publishing" type="java.lang.String"
			not-null="true" length="20" />
	</class>
</hibernate-mapping> 